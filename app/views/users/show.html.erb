<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <table class="table">
          <tbody>
            <%= image_tag @user.get_profile_image(100,100) %>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
            <i class ="fas fa-user-cog"></i>
          <% end %>
        </div>
        <%= render 'books/list_show', book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
          <table class="table">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
              </tr>
            </thead>
              <% @books.each do |book| %>
            <tbody>
              <tr>
                <th>
                  <%= link_to user_path(@user.id) do %>
                    <%= image_tag @user.get_profile_image(90,90) %><br/>
                  <% end %>
                </th>
                <td>
                  <%= link_to book_path(book.id) do %>
                    <%= book.title %>
                  <% end %>
                </td>
                <td><%= book.body %></td>
            </tbody>
            <% end %>
          </table>          
      </div>
  </div>
</main>