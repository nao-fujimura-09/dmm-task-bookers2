<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <table class="table">
          <tbody>
            <%= image_tag @user.get_profile_image(100,100) %>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @book.user.introduction %></th>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(@book.user.id), class: "btn btn-outline-secondary btn-block" do %>
            <i class ="fas fa-user-cog"></i>
          <% end %>
        </div>
        <%= render 'list_show', book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td class= "font-weight-normal">
                <%= link_to user_path(@book.user.id) do %>
                  <%= image_tag @book.user.get_profile_image(100,100) %><br/>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book.id) do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td><%= @book.body %></td>
              <% if @book.user_id == current_user.id %>
              <td>
                <%= link_to edit_book_path(@book.id), class: 'btn btn-success btn-sm' do %>
                  Edit
                <% end %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book), method: :delete, class:'btn btn-danger btn-sm', data: {confirm: "本当に消しますか？"} %>
              </td>
              <% end %>
            </tr>
          </tbody>
        </table>          
      </div>
    </div>
</main>